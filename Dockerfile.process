# Dockerfile for data processing
FROM python:3.14-slim

WORKDIR /app

# Install system dependencies for pandas/excel processing
RUN apt-get update && apt-get install -y \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python dependencies
COPY data/requirements.txt /app/data/
RUN pip install --no-cache-dir -r data/requirements.txt

# Copy data processing script
COPY data/process_data.py /app/data/

# Default command (can be overridden)
CMD ["python", "data/process_data.py"]
