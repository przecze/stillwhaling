FROM node:20-slim

WORKDIR /app

# Install system dependencies for Chromium
RUN apt-get update && apt-get install -y \
    libnss3 \
    libatk1.0-0 \
    libatk-bridge2.0-0 \
    libcups2 \
    libdrm2 \
    libdbus-1-3 \
    libxkbcommon0 \
    libxcomposite1 \
    libxdamage1 \
    libxfixes3 \
    libxrandr2 \
    libgbm1 \
    libasound2 \
    libpango-1.0-0 \
    libcairo2 \
    && rm -rf /var/lib/apt/lists/*

# Install Playwright and dependencies
COPY test/package.json ./
RUN npm install && \
    npx playwright install chromium && \
    npx playwright install-deps chromium

# Copy test script
COPY test/test.js ./

# BASE_URL is set by docker-compose, no need to hardcode here
CMD ["node", "test.js"]
